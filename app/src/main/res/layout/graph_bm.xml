<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/graphback"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kazimdmunim.smarthealthmonitor.graphPL">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:src="@drawable/text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:id="@+id/bptext"
        android:textSize="20dp"
        android:layout_marginBottom="60dp"
        android:textColor="#b9ced5"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/graph"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_above="@+id/graph"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:id="@+id/syst"/>

    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="200dip"
        android:id="@+id/graph" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum: "
        android:textSize="15dp"
        android:layout_below="@+id/graph"
        android:textColor="#ffffff"
        android:id="@+id/max"
        android:layout_marginTop="65dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum: "
        android:textSize="15dp"
        android:id="@+id/min"
        android:layout_below="@+id/max"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average: "
        android:textSize="15dp"
        android:layout_below="@+id/min"
        android:id="@+id/avg"
        android:textColor="#ffffff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/digit"
        android:layout_below="@+id/graph"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="         "
                android:textSize="15dp"
                android:id="@+id/sys"
                android:textColor="#b9ced5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sysmax"
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sysmin"
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sysavg"
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />



        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btnel"
        android:clickable="true"
        android:onClick="suggest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/digit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status and Suggestions"
        android:textSize="15dp"
        android:textColor="#b9ced5"
        android:layout_centerHorizontal="true"
        android:id="@+id/sugg"
        android:layout_marginTop="13dp"
        android:layout_below="@id/digit"/>
</RelativeLayout>
