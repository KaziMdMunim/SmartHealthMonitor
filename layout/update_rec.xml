<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back2"
    tools:context="com.example.kazimdmunim.smarthealthmonitor.UpdateRec">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:src="@drawable/text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Data Entry..."
        android:textColor="#b9ced5"
        android:id="@+id/ar"
        android:layout_below="@+id/name"
        android:layout_marginTop="60dp"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save"
        android:layout_below="@+id/wgt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="updated"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bpi"
        android:id="@+id/bpi"
        android:layout_below="@+id/name"
        android:layout_marginTop="130dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bsi"
        android:id="@+id/bsi"
        android:layout_below="@+id/bpi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pls"
        android:id="@+id/pls"
        android:layout_below="@+id/bsi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bmii"
        android:id="@+id/bmii"
        android:layout_below="@+id/pls"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BP"
        android:textColor="#b9ced5"
        android:id="@+id/bpt"
        android:textSize="15dp"
        android:layout_marginTop="145dp"
        android:layout_below="@id/name"
        android:layout_toRightOf="@+id/bpi"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugar"
        android:textColor="#b9ced5"
        android:id="@+id/bst"
        android:textSize="15dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/bsi"
        android:layout_below="@id/bpt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse"
        android:textColor="#b9ced5"
        android:id="@+id/pst"
        android:layout_toRightOf="@+id/pls"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/bst"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:layout_toRightOf="@+id/bmii"
        android:textColor="#b9ced5"
        android:id="@+id/bmit"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/pst"
        />

    <AutoCompleteTextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:hint="@string/prompt_tp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/tp"
        android:textColor="#122040"
        android:layout_below="@+id/name"
        android:background="@drawable/textback"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="135dp"/>

    <AutoCompleteTextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:hint="@string/prompt_mg"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/sg"
        android:textColor="#122040"
        android:layout_below="@+id/tp"
        android:background="@drawable/textback"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="30dp"/>

    <AutoCompleteTextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:hint="@string/prompt_btm"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/btm"
        android:textColor="#122040"
        android:layout_below="@+id/name"
        android:background="@drawable/textback"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="135dp"/>


    <AutoCompleteTextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:hint="@string/prompt_bt"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/pul"
        android:textColor="#122040"
        android:layout_below="@+id/sg"
        android:background="@drawable/textback"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="30dp"/>

    <AutoCompleteTextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:hint="@string/prompt_weight"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/wgt"
        android:textColor="#122040"
        android:layout_below="@+id/pul"
        android:background="@drawable/textback"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="30dp"/>


</RelativeLayout>
