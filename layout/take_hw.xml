<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.example.kazimdmunim.smarthealthmonitor.TakeHW">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:src="@drawable/text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Few more info"
        android:textColor="#b9ced5"
        android:id="@+id/ar"
        android:layout_below="@+id/name"
        android:textSize="20dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textColor="#b9ced5"
        android:id="@+id/ht"
        android:layout_below="@+id/ag"
        android:textSize="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textColor="#b9ced5"
        android:id="@+id/ag"
        android:layout_below="@+id/ar"
        android:textSize="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textColor="#b9ced5"
        android:id="@+id/wtn"
        android:layout_below="@+id/ht"
        android:textSize="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        />


    <AutoCompleteTextView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:hint="@string/prompt_feet"
        android:inputType="number"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/ft"
        android:textColor="#122040"
        android:layout_below="@+id/dt"
        android:background="@drawable/textback"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"/>

    <AutoCompleteTextView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:hint="@string/prompt_day"
        android:inputType="number"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/dt"
        android:textColor="#122040"
        android:layout_below="@+id/name"
        android:background="@drawable/textback"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="110dp"/>

    <AutoCompleteTextView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:hint="@string/prompt_inches"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/inc"
        android:textColor="#122040"
        android:background="@drawable/textback"
        android:layout_above="@+id/wt"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />


    <AutoCompleteTextView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:hint="@string/prompt_weight"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/wt"
        android:textColor="#122040"
        android:layout_below="@+id/ft"
        android:background="@drawable/textback"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save"
        android:clickable="true"
        android:onClick="registerUser"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:id="@+id/imageView2" />

</RelativeLayout>
