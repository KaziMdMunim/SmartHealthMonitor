<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/graphback"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kazimdmunim.smarthealthmonitor.graphALL">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:src="@drawable/text"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Graphs"
            android:id="@+id/bptext"
            android:textSize="20dp"
            android:layout_marginBottom="60dp"
            android:textColor="#b9ced5"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/graph"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_above="@+id/graph"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#0ceefe"
                android:textStyle="bold"
                android:id="@+id/syst"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#ff1616"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:id="@+id/dias"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffff00"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:id="@+id/pls"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:id="@+id/bmi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#BFFF00"
                android:textStyle="bold"
                android:id="@+id/sgr"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_above="@+id/graph"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#0ceefe"
            android:textStyle="bold"
            android:id="@+id/systb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff1616"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/diasb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffff00"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/plsb"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/bmib"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#BFFF00"
            android:textStyle="bold"
            android:id="@+id/sgrb"/>
    </LinearLayout>
    </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="200dip"
            android:id="@+id/graph" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum: "
            android:textSize="15dp"
            android:layout_below="@+id/graph"
            android:textColor="#ffffff"
            android:id="@+id/max"
            android:layout_marginTop="65dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum: "
            android:textSize="15dp"
            android:id="@+id/min"
            android:layout_below="@+id/max"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average: "
            android:textSize="15dp"
            android:layout_below="@+id/min"
            android:id="@+id/avg"
            android:textColor="#ffffff"
            />


    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/graph"
        android:fillViewport="false"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_below="@+id/graph"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Systolic"
                    android:textSize="15dp"
                    android:id="@+id/sys"
                    android:textColor="#ffffff"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sysmax"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sysmin"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sysavg"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />



            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diastolic"
                    android:textSize="15dp"
                    android:id="@+id/dia"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diamax"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diamin"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diaavg"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulse"
                    android:textSize="15dp"
                    android:id="@+id/pulse"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plsmax"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plsmin"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plsavg"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textSize="15dp"
                    android:id="@+id/bmii"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmimax"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmimin"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmiavg"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="15dp"
                android:textColor="#b9ced5"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sugar"
                    android:textSize="15dp"
                    android:id="@+id/sugar"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sugarmax"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sugarmin"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sugaravg"
                    android:textSize="15dp"
                    android:textColor="#b9ced5"
                    />

            </LinearLayout>



        </LinearLayout>

    </HorizontalScrollView>



</RelativeLayout>
