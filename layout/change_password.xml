<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kazimdmunim.smarthealthmonitor.change_password">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:src="@drawable/text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change your password"
        android:textColor="#b9ced5"
        android:id="@+id/ar"
        android:layout_below="@+id/name"
        android:layout_marginTop="60dp"
        android:textSize="20dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:hint=" Current password"
        android:inputType="textWebPassword"
        android:ems="12"
        android:maxLines="1"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:id="@+id/oldpass"
        android:textColor="#122040"
        android:layout_below="@+id/ar"
        android:layout_gravity="center"
        android:background="@drawable/textback"
        android:layout_marginTop="50dp"/>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:hint=" New password"
        android:layout_centerHorizontal="true"
        android:inputType="textWebPassword"
        android:ems="12"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/pass"
        android:textColor="#122040"
        android:layout_below="@+id/oldpass"
        android:layout_gravity="center"
        android:background="@drawable/textback"
        android:layout_marginTop="20dp"/>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:hint=" Retype new password"
        android:layout_centerHorizontal="true"
        android:inputType="textWebPassword"
        android:ems="12"
        android:maxLines="1"
        android:textSize="15dp"
        android:singleLine="true"
        android:id="@+id/rpass"
        android:textColor="#122040"
        android:layout_below="@+id/pass"
        android:layout_gravity="center"
        android:background="@drawable/textback"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save"
        android:layout_below="@+id/rpass"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="changed"
        android:id="@+id/imageView3" />

</RelativeLayout>
